<div class="d-flex justify-content-center">
	<form class="mt-4" method="post" action="/tasks/add-interview">
		<div class="row mb-3">
			<label for="companyName" class="form-label">Company Name</label>
			<input
				type="text"
				name="companyName"
				class="form-control"
				id="companyName"
				placeholder="Enter Company Name"
				required
			/>
			<div class="d-flex justify-content-start row mt-2">
				<label for="date" class="form-label">Date</label>
				<input
					class="form-control w-50"
					type="date"
					name="date"
					id="date"
					required
				/>
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<button type="submit" class="btn btn-primary m-auto">
				Create Interview
			</button>
		</div>
	</form>
</div>

<p class="h2 ms-2">All Interviews</p>

<% if (interviews) {%>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Company Name</th>
			<th scope="col">Interview Date</th>
		</tr>
	</thead>
	<tbody>
		<% let i=1 %> <% interviews.forEach(interview => { %>
		<tr>
			<th scope="row"><%=i++%></th>
			<td>
				<a href="/tasks/interview-details/<%= interview.id %>"
					><%= interview.companyName %></a
				>
			</td>
			<td><%=`${interview.date}`.split(" 05:30:00")[0] %></td>
		</tr>
		<% })} %>
	</tbody>
</table>
