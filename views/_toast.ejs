<div id="toast" class="toast-container position-absolute top-0 end-0 p-3">
	<div role="alert" aria-live="assertive" aria-atomic="true" class="toast text-bg-primary <%= flash.message ? "show" : "" %>" data-bs-autohide="true">
		<div class="d-flex">
			<div class="toast-body"><%= flash.message %></div>
			<button
				type="button"
				class="btn-close btn-close-white me-2 m-auto"
				data-bs-dismiss="toast"
				aria-label="Close"
			></button>
		</div>
	</div>
</div>